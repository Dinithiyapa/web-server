version: '3'
services:
  web:
    build: ./web
    ports:
      - "3000:3000"
    networks:
      - app-network
    environment:
      - DB=postgres://username:password@localhost/database
  api:
    build: ./api
    ports:
      - "4000:4000"
    networks:
   
   - app-network
networks:
  app-network:
    driver: bridge
